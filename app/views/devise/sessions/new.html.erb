<div class='login-container d-flex flex-column justify-content-center align-items-center'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <nav class='nav-cont text-light d-flex justify-content-between align-items-center w-100 p-3 mb-4'>
      <%= link_to root_path, class: 'back-button' do%>
        <span><img src='https://img.icons8.com/ios-glyphs/24/ffffff/back.png'/></span>
      <% end %>
      <h3 class='header-title m-0 fs-2'>LOGIN</h3>
      <%= f.submit 'Log in', class: 'btn mr-2 text-light display-6' %>
    </nav>

    <div class='fields'>
      <%= f.email_field :email, placeholder: 'E-mail', autofocus: true, autocomplete: 'email', class: 'input' %>
    </div>

    <div class='field'>
      <%= f.password_field :password, placeholder: 'Password', autocomplete: 'current-password', class: 'input' %>
    </div>

    <%= link_to "Forgot password?", new_password_path('user'), class: 'align-self-center mt-3' %>

  <% end %>
</div>
