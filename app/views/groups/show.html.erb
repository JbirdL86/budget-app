<div class="group-index-container">
  <div class="card">
    <div class="order-container d-flex justify-content-end">
      <p class="text-light fs-6 p-2 bd-highlight">
        Most recent
      </p>
      <p class="text-light fs-6 p-2 bd-highlight">
        Most ancient
      </p>
    </div>
    <div class="card-body d-flex justify-content-between">
      <p class="text fs-5">
        Gift credit
      </p>
      <p class="fs-5">
        $45.00
      </p>
    </div>
  </div>
  <%= render partial: "_partials/cards/group_header", locals: { group: @group, activities: @activities } %>
  <div class="activity-list-container d-flex flex-column justify-content-between mt-4">
    <div class="text-center text-ligth">
      <%if @activities.empty? %>
      <h2 class="fw-bold display-6">No Transactions for this group</h2>
      <p class="mt-3 display-7">Please add activity by clicking the button below</p>
      <%else%>
        <% @activities.each do |activity|%>
            <%= render partial: "_partials/cards/activity", locals: { activity: activity } %>
        <%end%>
      <%end%>
      <%= render partial: '_partials/errors/errors' %>
    </div>
    <%= render partial: "_partials/navigations/new_item_button", locals: { label: "Add Transaction", new_path: new_activity_path } %>
  </div>
</div>


